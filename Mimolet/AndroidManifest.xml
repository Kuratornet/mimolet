<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mimolet.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.mimolet.android.AuthorizationActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mimolet.android.AddBookActivity"
            android:label="@string/title_activity_add_book"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mimolet.android.PhoneGalleryActivity"
            android:label="@string/title_activity_phone_gallery"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mimolet.android.OrdersListActivity"
            android:label="@string/title_activity_orders_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mimolet.android.ChoiseImagesActivity"
            android:label="@string/title_activity_orders_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mimolet.android.multiphoto.MultiPhotoSelectActivity"
            android:label="@string/title_activity_uploaded_photo_gallery"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.mimolet.android.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.mimolet.android.EditPhotoActivity"
            android:label="@string/edit_photo_activity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/appID" />

        <activity
            android:name="com.mimolet.android.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.mimolet.android.RestorePasswordActivity"
            android:label="@string/title_activity_restore_password" >
        </activity>
    </application>
    <application
        android:name="com.mimolet.android.GlobalVariables"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name" >
    </application>

</manifest>

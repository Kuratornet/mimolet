<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AuthorizationActivity" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/orimage" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignRight="@+id/bookName"
        android:layout_below="@+id/bookName"
        android:layout_marginTop="19dp"
        android:background="@drawable/testloginbg"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="@string/password" />
    
    <EditText
        android:id="@+id/loginField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bookName"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignTop="@+id/bookName"
        android:layout_toRightOf="@+id/bookName"
        android:background="@drawable/testloginbg"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/bookName"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="20dp"
        android:background="@drawable/testloginbg"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="@string/login" />
    
        <EditText
            android:id="@+id/passwordField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/loginField"
            android:layout_alignRight="@+id/loginField"
            android:layout_alignTop="@+id/textView2"
            android:background="@drawable/testloginbg"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingLeft="8dp" />

    <ImageView
        android:id="@+id/imageButton1"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignTop="@+id/imageButton2"
        android:src="@drawable/facebookenter" />

    <ImageView
        android:id="@+id/signinButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/enterbutton"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:onClick="authorize"
        android:text="@string/signin" />

    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_marginBottom="19dp"
        android:src="@drawable/googleplusenter" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/logo" />

</RelativeLayout>
